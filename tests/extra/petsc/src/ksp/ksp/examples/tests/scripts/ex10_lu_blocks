#! /bin/csh
#
#  Tests the different matrix orderings for LU
#
foreach matrix (medium arco1)

  foreach order (natural nd 1wd rcm qmd)

    foreach mode (-mat_no_unroll nothing)

      foreach bs (1 2 3 4 5 6)

        echo "mpiexec ex10 -f0 /home/bsmith/petsc/src/mat/examples/matrices/$matrix -pc_type lu  -mat_order $order $mode blocksize $bs"

        mpiexec ex10 -f0 /home/bsmith/petsc/src/mat/examples/matrices/$matrix -pc_type lu -mat_order $order -ksp_monitor $mode -matload_ignore_info -matload_block_size $bs -optionsleft -mat_seqbaij

      end

    end

  end

end
